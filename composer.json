{
    "name": "pantheon/wptest",
    "description": "Site for testing future versions of WordPress",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Chris Reynolds",
            "email": "chris.reynolds@pantheon.io"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "repositories": [
        {
            "type": "composer",
            "url": "https://wpackagist.org",
            "only": ["wpackagist-plugin/*", "wpackagist-theme/*"]
        }
    ],
    "extra": {
        "installer-paths": {
            "wp-content/mu-plugins/{$name}/": [
                "type:wordpress-muplugin", 
                "pantheon-systems/pantheon-mu-plugin",
                "cmb2/cmb2"
            ],
            "wp-content/plugins/{$name}/": ["type:wordpress-plugin"],
            "wp-content/themes/{$name}/": ["type:wordpress-theme"]
        }
    },
    "require": {
        "composer/installers": "^1.0 || ^2.2",
        "pantheon-systems/pantheon-mu-plugin": "*",
        "humanmade/wordpress-importer": "dev-master",
        "pantheon-systems/pantheon-wordpress-upstream-tests": "dev-master",
        "pantheon-systems/customer-secrets-php-sdk": "^1.0",
        "wpackagist-plugin/test-reports": "^1.0",
        "jazzsequence/games-collector": "^1.3",
        "cmb2/cmb2": "^2.7"
    },
    "config": {
        "process-timeout": 6000,
        "allow-plugins": {
            "composer/installers": true
        }
    },
    "scripts": {
        "wordpress-update": [
            "bash ./scripts/update-pre-load.sh"
        ],
        "test": [
            "Composer\\Config::disableProcessTimeout",
            "bash ./scripts/test.sh"
        ],
        "deploy": [
            "bash ./scripts/deploy.sh"
        ],
        "check-latest-wp": [
            "source ./scripts/helpers.sh && get_latest_wp_release"
        ]
    }
}
